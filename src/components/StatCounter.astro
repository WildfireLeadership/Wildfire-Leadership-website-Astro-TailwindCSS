---
interface Props {
  stats: Array<{
    value: number;
    suffix?: string;
    label: string;
  }>;
  /** Background variant */
  bg?: 'white' | 'warm-white' | 'cream' | 'dark';
}

const { stats, bg = 'cream' } = Astro.props;
const bgClass = bg === 'dark' ? 'bg-charcoal-deep' : bg === 'warm-white' ? 'bg-warm-white' : bg === 'cream' ? 'bg-cream' : 'bg-white';
const textClass = bg === 'dark' ? 'text-white' : 'text-charcoal';
const labelClass = bg === 'dark' ? 'text-white/50' : 'text-stone';
---

<section class:list={["relative py-20 md:py-28", bgClass]}>
  <div class="max-w-[1400px] mx-auto px-5 md:px-8">
    <div class:list={["grid gap-y-12", stats.length <= 3 ? "grid-cols-1 md:grid-cols-3" : "grid-cols-2 lg:grid-cols-4"]}>
      {stats.map((stat, i) => (
        <div class:list={["reveal text-center", `reveal-d${i + 1}`]}>
          <p
            class:list={["font-display text-5xl md:text-6xl lg:text-7xl", textClass]}
            data-count={stat.value}
            data-suffix={stat.suffix || ''}
          >
            0{stat.suffix || ''}
          </p>
          <p class:list={["mt-3 text-[13px] leading-relaxed whitespace-pre-line", labelClass]}>{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
