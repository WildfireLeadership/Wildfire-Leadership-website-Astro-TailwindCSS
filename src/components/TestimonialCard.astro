---
interface Props {
  quote: string;
  name: string;
  title?: string;
  /** 'large' for featured testimonials, 'default' for grid */
  variant?: 'large' | 'default';
}

const { quote, name, title, variant = 'default' } = Astro.props;
---

{variant === 'large' ? (
  <div class="reveal max-w-4xl mx-auto text-center py-8">
    <svg class="w-10 h-10 mx-auto text-ember/20 mb-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
    <blockquote class="font-display text-2xl md:text-3xl lg:text-4xl text-charcoal leading-[1.3] italic">
      "{quote}"
    </blockquote>
    <div class="mt-8">
      <p class="text-sm font-medium text-charcoal">{name}</p>
      {title && <p class="text-sm text-stone mt-1">{title}</p>}
    </div>
  </div>
) : (
  <div class="reveal p-8 md:p-10 rounded-xl bg-warm-white border border-sand/50">
    <svg class="w-6 h-6 text-ember/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
    <blockquote class="text-base text-charcoal/80 leading-relaxed italic">
      "{quote}"
    </blockquote>
    <div class="mt-6 pt-6 border-t border-sand/50">
      <p class="text-sm font-medium text-charcoal">{name}</p>
      {title && <p class="text-[13px] text-stone mt-0.5">{title}</p>}
    </div>
  </div>
)}
