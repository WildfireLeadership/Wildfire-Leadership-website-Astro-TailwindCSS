---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
import SplitSection from '../components/SplitSection.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BaseLayout title="INVEST Marriage" description="Build a thriving, God-centered marriage. An 8-week curriculum to reignite connection, strengthen communication, and dream together as a couple.">

  <!-- ===== HERO — Dark cinematic ===== -->
  <PageHero
    variant="dark"
    image="/images/hero-main.jpg"
    title='Build a Thriving,<br/><em>God-Centered Marriage</em>'
    subtitle="Ready to reignite connection, strengthen communication, and dream together as a couple?"
  />

  <!-- ===== TOOLS — White bg, 2x2 grid ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-4">The Curriculum</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          What's <em>Included</em>
        </h2>
        <p class="reveal reveal-d2 mt-6 text-base md:text-lg text-stone max-w-2xl mx-auto leading-relaxed">
          Four proven tools designed to help couples build a stronger, more intentional marriage.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-4 md:gap-6 max-w-4xl mx-auto">
        {[
          {
            title: "Mission Portrait",
            desc: "Define your individual vision and purpose.",
            icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z",
          },
          {
            title: "Proper Portions Tool",
            desc: "Set boundaries and protect your priorities.",
            icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3",
          },
          {
            title: "DREAM Map",
            desc: "Dream together and create a unified plan.",
            icon: "M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7",
          },
          {
            title: "Grace Place Tool",
            desc: "Foster grace-filled, trust-building communication.",
            icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
          },
        ].map((tool, i) => (
          <div class:list={["reveal group p-8 rounded-xl bg-white border border-sand/50 hover:border-ember/30 hover:shadow-lg hover:shadow-charcoal/5 transition-all duration-400", `reveal-d${i + 1}`]}>
            <div class="w-12 h-12 rounded-xl bg-ember/10 flex items-center justify-center mb-5 group-hover:bg-ember/20 transition-colors duration-300">
              <svg class="w-5 h-5 text-ember" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={tool.icon} />
              </svg>
            </div>
            <h3 class="font-display text-xl md:text-2xl text-charcoal mb-2">{tool.title}</h3>
            <p class="text-sm text-stone leading-relaxed">{tool.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ===== PROGRAM DETAILS — Warm-white bg, split layout ===== -->
  <SplitSection
    label="Program Details"
    title='8 weeks to a<br/><em>stronger marriage.</em>'
    description="Designed for engaged or married couples at any stage, the INVEST Marriage curriculum is facilitated by small group leaders and creates a safe, practical space to grow together. Pricing starts at $80 per couple, with a group discount of $70 per couple for groups of 5 or more."
    image="/images/invest-marriage-screenshot1.png"
    imageAlt="INVEST Marriage curriculum screenshot"
    imagePosition="right"
    bg="warm-white"
    link={{ text: "Start your group today", href: "/contact" }}
  />

  <!-- ===== TESTIMONIAL 1 — Cream bg ===== -->
  <section class="relative py-24 md:py-32 bg-cream">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <TestimonialCard
        variant="large"
        quote="The INVEST Marriage curriculum has been a game-changer for our church. It's practical, engaging, and easy to implement, making it simple for small group leaders to pour into marriages."
        name="Katie Walters"
        title="Marriage Ministry Pastor, Seacoast Church, South Carolina"
      />
    </div>
  </section>

  <!-- ===== FACILITATOR STEPS — White bg ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-4">Get Started</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          Become a Facilitator in<br/><em>3 Simple Steps</em>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {[
          {
            num: "01",
            title: "Sign Up & Get Your Materials",
            desc: "$80 per couple includes facilitator videos, workbooks, and a personalized Mission Portrait for each participant.",
          },
          {
            num: "02",
            title: "Watch the Facilitator Videos",
            desc: "Simple, easy-to-follow training that requires no prior experience. You'll feel confident and prepared from day one.",
          },
          {
            num: "03",
            title: "Gather & Grow",
            desc: "Meet anywhere — a living room, coffee shop, or church. Follow the session guide and watch marriages transform.",
          },
        ].map((step, i) => (
          <div class:list={["reveal group p-8 md:p-10 rounded-2xl bg-white border border-sand/50 hover:border-ember/30 hover:shadow-lg hover:shadow-charcoal/5 transition-all duration-400", `reveal-d${i + 1}`]}>
            <span class="font-display text-5xl text-ember/20 group-hover:text-ember/40 transition-colors duration-400">{step.num}</span>
            <h3 class="mt-4 font-display text-xl md:text-2xl text-charcoal leading-[1.2] mb-3">{step.title}</h3>
            <p class="text-sm text-stone leading-relaxed">{step.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ===== TESTIMONIAL 2 — Warm-white bg ===== -->
  <section class="relative py-24 md:py-32 bg-warm-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <TestimonialCard
        variant="large"
        quote="My husband and I went through the INVEST Marriage at a retreat and knew that we wanted to share this with others! It was so easy to facilitate..."
        name="Jim and Jenny Benedict"
        title="Small Group Leaders, Xperience Church, Ohio"
      />
    </div>
  </section>

  <!-- ===== CTA CLOSER ===== -->
  <CallToAction
    title='Invest in your<br/><em class="ember-gradient">marriage.</em>'
    description="Start your 8-week journey toward a thriving, God-centered marriage today."
  />

</BaseLayout>
