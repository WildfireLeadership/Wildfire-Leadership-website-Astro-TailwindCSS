---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BaseLayout title="Get in Touch" description="Contact Wildfire Leadership to start your journey — whether individual, family, business, faith & community, or leadership development.">

  <!-- Force header-light for light hero -->
  <script>document.getElementById('site-header')?.classList.add('header-light');</script>

  <!-- ===== HERO ===== -->
  <div id="contact-hero">
    <PageHero
      variant="light"
      title='Get in<br/><em>Touch</em>'
      subtitle="Every journey is unique — be it individual, family, business, faith & community, or leadership, we have something for you!"
    />
  </div>

  <!-- ===== CONTACT FORM — White bg ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="max-w-3xl mx-auto">
        <div id="contact-heading" class="text-center mb-14">
          <p class="reveal text-xs font-semibold uppercase tracking-[0.3em] text-ember mb-4">Reach Out</p>
          <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
            We'd love to <em>hear from you.</em>
          </h2>
        </div>

        <form action="https://formsubmit.co/info@wildfireleadership.com" method="POST" class="reveal reveal-d2 space-y-8">
          <input type="hidden" name="_subject" value="New inquiry from Wildfire Leadership website">
          <input type="hidden" name="_captcha" value="false">
          <input type="text" name="_honey" style="display:none">
          <input type="hidden" name="_next" value="https://wildfire-leadership.vercel.app/contact?sent=true">

          <!-- Interest radio group -->
          <fieldset id="interest-fieldset">
            <legend class="text-sm font-medium text-charcoal mb-4">I'm interested in...</legend>

            <div id="interest-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
              {[
                { label: "Ignite Students (K-12)", param: "ignite-k12" },
                { label: "Ignite Higher Ed", param: "ignite-higher-ed" },
                { label: "Business & Team Workshop", param: "business" },
                { label: "Faith & Community Workshop", param: "faith" },
                { label: "Facilitator Certification", param: "facilitator" },
                { label: "Leadership Development", param: "leadership" },
                { label: "Coaching", param: "coaching" },
              ].map((option) => (
                <label class="group relative flex items-center gap-3 px-4 py-3 rounded-xl border border-sand/80 bg-white cursor-pointer hover:border-ember/40 transition-colors duration-300 has-[input:checked]:border-ember has-[input:checked]:bg-ember/5">
                  <input type="radio" name="interest" value={option.label} data-interest={option.param} class="peer sr-only" />
                  <span class="w-4 h-4 shrink-0 rounded-full border-2 border-sand peer-checked:border-ember peer-checked:bg-ember relative transition-colors duration-200 after:content-[''] after:absolute after:inset-[3px] after:rounded-full after:bg-white after:opacity-0 peer-checked:after:opacity-100"></span>
                  <span class="text-sm text-stone peer-checked:text-charcoal transition-colors duration-200">{option.label}</span>
                </label>
              ))}
            </div>
          </fieldset>

          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-charcoal mb-2">Name <span class="text-ember">*</span></label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-xl border border-sand bg-white focus:border-ember focus:ring-1 focus:ring-ember/20 outline-none transition-colors"
              placeholder="Your full name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-charcoal mb-2">Email <span class="text-ember">*</span></label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl border border-sand bg-white focus:border-ember focus:ring-1 focus:ring-ember/20 outline-none transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-charcoal mb-2">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 rounded-xl border border-sand bg-white focus:border-ember focus:ring-1 focus:ring-ember/20 outline-none transition-colors"
              placeholder="(555) 123-4567"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-charcoal mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full px-4 py-3 rounded-xl border border-sand bg-white focus:border-ember focus:ring-1 focus:ring-ember/20 outline-none transition-colors resize-y"
              placeholder="Tell us about your goals, your team, or how we can help..."
            ></textarea>
          </div>

          <!-- Preferred contact method -->
          <fieldset>
            <legend class="text-sm font-medium text-charcoal mb-3">Preferred contact method</legend>
            <div class="flex items-center gap-6">
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="contact_method" value="Email" checked class="peer sr-only" />
                <span class="w-4 h-4 shrink-0 rounded-full border-2 border-sand peer-checked:border-ember peer-checked:bg-ember relative transition-colors duration-200 after:content-[''] after:absolute after:inset-[3px] after:rounded-full after:bg-white after:opacity-0 peer-checked:after:opacity-100"></span>
                <span class="text-sm text-stone peer-checked:text-charcoal transition-colors duration-200">Email</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="contact_method" value="Phone" class="peer sr-only" />
                <span class="w-4 h-4 shrink-0 rounded-full border-2 border-sand peer-checked:border-ember peer-checked:bg-ember relative transition-colors duration-200 after:content-[''] after:absolute after:inset-[3px] after:rounded-full after:bg-white after:opacity-0 peer-checked:after:opacity-100"></span>
                <span class="text-sm text-stone peer-checked:text-charcoal transition-colors duration-200">Phone</span>
              </label>
            </div>
          </fieldset>

          <!-- Submit -->
          <div class="pt-2">
            <button
              type="submit"
              class="group inline-flex items-center gap-3 bg-charcoal text-white rounded-full px-8 py-4 text-sm font-medium tracking-wide hover:shadow-xl hover:shadow-charcoal/15 transition-all duration-400 hover:scale-[1.02]"
            >
              Send message
              <svg class="w-4 h-4 transition-transform duration-400 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
              </svg>
            </button>
          </div>

        </form>
      </div>
    </div>
  </section>

  <!-- ===== CONTACT INFO — Warm-white bg ===== -->
  <section class="relative py-24 md:py-32 bg-warm-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="grid md:grid-cols-2 gap-5 md:gap-6 max-w-2xl mx-auto">

        <!-- Email -->
        <a href="mailto:info@wildfireleadership.com" class="reveal group block bg-white rounded-xl border border-sand/50 p-6 hover:shadow-lg hover:shadow-charcoal/5 transition-all duration-500 no-underline">
          <div class="w-12 h-12 rounded-xl bg-ember/8 flex items-center justify-center mb-5 group-hover:bg-ember/15 transition-colors duration-300">
            <svg class="w-5 h-5 text-ember" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </div>
          <h3 class="font-display text-xl text-charcoal mb-2">Email</h3>
          <span class="text-sm text-stone group-hover:text-ember transition-colors duration-300">
            info@wildfireleadership.com
          </span>
        </a>

        <!-- Instagram -->
        <a href="https://instagram.com/wildfireleadership" target="_blank" rel="noopener noreferrer" class="reveal reveal-d1 group block bg-white rounded-xl border border-sand/50 p-6 hover:shadow-lg hover:shadow-charcoal/5 transition-all duration-500 no-underline">
          <div class="w-12 h-12 rounded-xl bg-ember/8 flex items-center justify-center mb-5 group-hover:bg-ember/15 transition-colors duration-300">
            <svg class="w-5 h-5 text-ember" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
            </svg>
          </div>
          <h3 class="font-display text-xl text-charcoal mb-2">Instagram</h3>
          <span class="text-sm text-stone group-hover:text-ember transition-colors duration-300">
            @wildfireleadership
          </span>
        </a>

      </div>
    </div>
  </section>

  <!-- ===== CTA CLOSER ===== -->
  <CallToAction
    title='Start your<br/><em class="ember-gradient">journey today.</em>'
    description="Take the first step toward discovering your mission and unlocking your full potential."
  />

<script>
  const params = new URLSearchParams(window.location.search);

  // Pre-select interest radio if ?interest= param exists
  const interest = params.get('interest');
  if (interest) {
    const radio = document.querySelector(`input[name="interest"][data-interest="${interest}"]`) as HTMLInputElement;
    if (radio) {
      radio.checked = true;
    }
  }

  // Show success message if redirected back after form submission
  if (params.get('sent') === 'true') {
    // Hide hero and section heading
    const hero = document.getElementById('contact-hero');
    const heading = document.getElementById('contact-heading');
    if (hero) hero.style.display = 'none';
    if (heading) heading.style.display = 'none';

    const form = document.querySelector('form');
    if (form) {
      form.innerHTML = `
        <div class="text-center py-16 md:py-24">
          <div class="w-20 h-20 rounded-full bg-ember/10 flex items-center justify-center mx-auto mb-8">
            <svg class="w-10 h-10 text-ember" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h2 class="font-display text-3xl md:text-4xl text-charcoal mb-4">Message sent!</h2>
          <p class="text-stone text-lg mb-10 max-w-md mx-auto">Thank you for reaching out. We'll get back to you soon.</p>
          <a href="/" class="group inline-flex items-center gap-3 px-8 py-4 rounded-full text-sm font-medium tracking-wide text-white bg-charcoal hover:bg-ember transition-all duration-400">
            Back to Home
            <svg class="w-4 h-4 transition-transform duration-400 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      `;
    }
  }
</script>

</BaseLayout>
