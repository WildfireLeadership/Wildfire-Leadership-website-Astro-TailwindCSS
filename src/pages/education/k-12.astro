---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
import TestimonialCard from '../../components/TestimonialCard.astro';
import CallToAction from '../../components/CallToAction.astro';
---

<BaseLayout title="Ignite Students K-12" description="A practical K-12 framework that builds clarity, confidence, and direction — helping students discover their purpose before they choose their path.">

  <!-- ===== HERO ===== -->
  <PageHero
    variant="dark"
    image="/images/students-mission-portraits.jpg"
    imageAlt="Students holding their completed Mission Portraits"
    title='Ignite<br/><em>Students K-12</em>'
    subtitle="A practical K-12 framework that builds clarity, confidence, and direction — helping students discover their purpose before they choose their path."
  />

  <!-- ===== VIDEO TESTIMONIAL ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[900px] mx-auto px-5 md:px-8">
      <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember text-center mb-8">Hear From a Student</p>
      <div class="reveal reveal-d1 relative aspect-video rounded-2xl overflow-hidden shadow-lg shadow-charcoal/10">
        <iframe
          src="https://player.vimeo.com/video/1163802453?title=0&byline=0&portrait=0"
          title="Student testimonial — Maysa on how Ignite Students helped her"
          class="absolute inset-0 w-full h-full"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </section>

  <!-- ===== THE PROBLEM ===== -->
  <section class="relative py-28 md:py-40 bg-charcoal">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember text-center mb-12">The Problem</p>

      <div class="grid md:grid-cols-2 gap-8 md:gap-12 mb-12">
        <div class="reveal text-center md:text-right">
          <p class="font-display text-7xl md:text-8xl lg:text-9xl text-ember leading-none">87%</p>
          <p class="text-white/70 text-base md:text-lg mt-3">of people <strong class="text-white">do not understand their purpose.</strong></p>
          <p class="text-white/30 text-xs mt-2">Lifeway Research, 2017</p>
        </div>
        <div class="reveal reveal-d1 text-center md:text-left">
          <p class="font-display text-7xl md:text-8xl lg:text-9xl text-ember leading-none">50%</p>
          <p class="text-white/70 text-base md:text-lg mt-3">of students report <strong class="text-white">stress and confusion about their future.</strong></p>
          <p class="text-white/30 text-xs mt-2">Ipsos, 2022</p>
        </div>
      </div>

      <div class="reveal max-w-2xl mx-auto text-center">
        <p class="font-display text-xl md:text-2xl text-white/90 leading-relaxed">
          Everyone's asking students where they're going. But first, they need to understand <em class="text-ember">who they are.</em>
        </p>
      </div>
    </div>
  </section>

  <!-- ===== TRUSTED BY ===== -->
  <section class="relative py-16 md:py-20 bg-white border-t border-sand/30">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <p class="reveal text-[11px] uppercase tracking-[0.3em] text-stone text-center mb-10">Trusted by schools across the country</p>
      <div class="reveal reveal-d1 flex flex-wrap justify-center items-center gap-8 md:gap-12">
        {[
          { src: "/images/school-logo-5.png", alt: "Defiance City Schools" },
          { src: "/images/school-logo-3.png", alt: "Northeastern Local Schools" },
          { src: "/images/school-logo-6.png", alt: "Ayersville Local Schools" },
          { src: "/images/school-logo-7.png", alt: "Indian Lake High School" },
          { src: "/images/school-logo-napoleon.gif", alt: "Napoleon Area Schools" },
          { src: "/images/school-logo-patrick-henry.png", alt: "Patrick Henry Local Schools" },
          { src: "/images/school-logo-allen-east.jpg", alt: "Allen East Schools" },

        ].map((logo) => (
          <img src={logo.src} alt={logo.alt} class="h-14 w-28 md:h-18 md:w-36 object-contain opacity-70 hover:opacity-100 transition-opacity duration-300" />
        ))}
      </div>
    </div>
  </section>

  <!-- ===== 40K STAT ===== -->
  <section class="relative py-16 md:py-20 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <p class="reveal font-display text-3xl md:text-4xl lg:text-5xl text-charcoal text-center leading-[1.1]">
        More than <em class="text-ember">40,000</em> individuals and students have completed a personal Mission Portrait.
      </p>
    </div>
  </section>

  <!-- ===== OUR APPROACH ===== -->
  <section class="relative py-24 md:py-32 bg-warm-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-6">Our Approach</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          Two Tools. <em>One Transformation.</em>
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="reveal bg-white rounded-2xl border border-sand/50 p-8 md:p-10">
          <p class="text-[11px] uppercase tracking-[0.3em] text-ember mb-5">Tool 1</p>
          <h3 class="font-display text-2xl md:text-3xl text-charcoal leading-[1.1] mb-4">Mission Portrait</h3>
          <p class="text-stone text-base leading-relaxed">
            A personalized visual guide that helps students stay focused on their core values and goals. It provides clarity and direction, allowing them to expand their understanding of what matters most.
          </p>
        </div>
        <div class="reveal reveal-d1 bg-white rounded-2xl border border-sand/50 p-8 md:p-10">
          <p class="text-[11px] uppercase tracking-[0.3em] text-ember mb-5">Tool 2</p>
          <h3 class="font-display text-2xl md:text-3xl text-charcoal leading-[1.1] mb-4">The 7 Igniters</h3>
          <p class="text-stone text-base leading-relaxed">
            A 7-stage framework guiding students through self-discovery, goal-setting, career exploration, and action — equipping them with clarity, direction, and momentum for their future.
          </p>
        </div>
      </div>

      <div class="reveal mt-8 text-center">
        <p class="text-sm text-stone leading-relaxed">
          Built for flexibility — small groups or full classrooms. The curriculum adapts to a variety of group sizes, timelines, and learning environments, with resources available in print, digital, and video-based formats.
        </p>
      </div>
    </div>
  </section>

  <!-- ===== PROVEN RESULTS ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-6">Proven Results</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          The numbers <em>speak for themselves.</em>
        </h2>
      </div>

      <!-- Before/After Stats -->
      <div class="grid md:grid-cols-2 gap-6 mb-16">
        <!-- Purpose Clarity -->
        <div class="reveal rounded-xl overflow-hidden">
          <div class="bg-charcoal p-6 md:p-8 text-center">
            <p class="text-[11px] uppercase tracking-[0.3em] text-white/50 mb-3">Before</p>
            <p class="font-display text-5xl md:text-6xl text-white">13%</p>
            <p class="text-sm text-white/60 mt-2">understood their purpose</p>
            <p class="text-[10px] text-white/30 mt-1">Lifeway Research, 2017</p>
          </div>
          <div class="bg-ember p-6 md:p-8 text-center">
            <p class="text-[11px] uppercase tracking-[0.3em] text-white/70 mb-3">After</p>
            <p class="font-display text-5xl md:text-6xl text-white">94%</p>
            <p class="text-sm text-white/80 mt-2">clarity and understanding of purpose</p>
            <p class="text-[10px] text-white/50 mt-1">Tinora Schools internal reporting</p>
          </div>
        </div>
        <!-- Direction & Roadmap -->
        <div class="reveal reveal-d1 rounded-xl overflow-hidden">
          <div class="bg-charcoal p-6 md:p-8 text-center">
            <p class="text-[11px] uppercase tracking-[0.3em] text-white/50 mb-3">Before</p>
            <p class="font-display text-5xl md:text-6xl text-white">17%</p>
            <p class="text-sm text-white/60 mt-2">had clarity of direction</p>
            <p class="text-[10px] text-white/30 mt-1">Gallup-Strada, 2017</p>
          </div>
          <div class="bg-ember p-6 md:p-8 text-center">
            <p class="text-[11px] uppercase tracking-[0.3em] text-white/70 mb-3">After</p>
            <p class="font-display text-5xl md:text-6xl text-white">80%</p>
            <p class="text-sm text-white/80 mt-2">clarity of direction and a defined roadmap</p>
            <p class="text-[10px] text-white/50 mt-1">Tinora Schools internal reporting</p>
          </div>
        </div>
      </div>

      <!-- Tinora Case Study -->
      <div class="reveal max-w-4xl mx-auto">
        <p class="text-[11px] uppercase tracking-[0.3em] text-ember text-center mb-10">Tinora Schools — A Model of Excellence</p>
        <div class="grid sm:grid-cols-2 gap-4 mb-8">
          {[
            { label: "Professional Development", desc: "School leadership participated in Wildfire Leadership training, building buy-in for a shared vision of transformative leadership." },
            { label: "Certified Teacher Facilitators", desc: "Teachers earned certification as facilitators, seamlessly integrating the framework into daily classroom activities." },
            { label: "8th-Grade Curriculum", desc: "All 8th-grade students participate in the program, building a foundation in self-discovery and leadership." },
            { label: "Senior Capstone Experience", desc: "Seniors complete a capstone centered on the Mission Portrait and 7 Igniters, equipping them for life after graduation." },
          ].map((item) => (
            <div class="bg-warm-white rounded-lg border border-sand/50 p-5">
              <h4 class="text-sm font-medium text-ember mb-1">{item.label}</h4>
              <p class="text-stone text-sm leading-relaxed">{item.desc}</p>
            </div>
          ))}
        </div>
        <p class="text-stone text-sm text-center leading-relaxed">
          The before/after results above reflect Tinora's internal reporting after full district-wide implementation.
        </p>
      </div>
    </div>
  </section>

  <!-- ===== TESTIMONIALS ===== -->
  <section class="relative py-24 md:py-32 bg-warm-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-6">What They're Saying</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          Real voices. <em>Real impact.</em>
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <TestimonialCard
          quote="Ignite Students builds self-discipline, connection, and clarity through powerful tools like the Mission Portrait. It fosters a culture of purpose, reflection, and growth. This curriculum is a must for students to learn the process of goal realization."
          name="Bob Morton"
          title="Superintendent, Defiance City Schools"
        />
        <TestimonialCard
          quote="Since implementing Ignite, we've seen a shift in both students and teachers. Students are more engaged, and our educators feel re-energized. The culture of our school has transformed — we're not just preparing students academically, but equipping them with purpose and vision for their future."
          name="Principal Alex Nafziger"
          title="Tinora High School"
        />
        <TestimonialCard
          quote="As a teacher, I have been able to watch this program transform students' mindsets and build their confidence in who they are as people and how they hope to succeed in their lives. This program is more than a '5-year plan'. It goes deeper and truly engages students in determining their value and worth in today's world."
          name="Mrs. Profera"
          title="Tinora High School"
        />
        <TestimonialCard
          quote="Ignite Students helped me discover my purpose and stay focused on being fearless and courageous. My Mission Portrait reminds me every day that I have meaning and a mission to lead, support, and encourage others."
          name="Reaghan"
          title="8th Grade Ignite Students Participant"
        />
      </div>
    </div>
  </section>

  <!-- ===== IMPLEMENTATION ===== -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-6">Implementation</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          How to Bring Ignite <em>to Your School</em>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {[
          {
            number: "01",
            heading: "Experience It Yourself",
            desc: "School administrators participate in a hands-on Wildfire Leadership workshop — experiencing the Mission Portrait and 7 Igniters firsthand so you can lead the vision with clarity and conviction.",
          },
          {
            number: "02",
            heading: "Certify Your Facilitators",
            desc: "Train and certify your teachers to lead Ignite Students in classrooms and small groups. They'll be fully equipped with tools, lesson plans, and ongoing support.",
          },
          {
            number: "03",
            heading: "Launch & Sustain",
            desc: "Annual licensing gives your school access to digital and physical curriculum resources, ensuring the program grows with your students year after year.",
          },
        ].map((item, i) => (
          <div class:list={["reveal bg-warm-white rounded-xl border border-sand/50 p-8 md:p-10", `reveal-d${i + 1}`]}>
            <p class="font-display text-4xl text-ember/80 mb-4">{item.number}</p>
            <h3 class="text-xl font-medium text-charcoal mb-3">{item.heading}</h3>
            <p class="text-stone text-sm leading-relaxed">{item.desc}</p>
          </div>
        ))}
      </div>

      <div class="reveal mt-10 max-w-3xl mx-auto">
        <div class="bg-cream rounded-xl border border-sand/50 p-6 md:p-8 text-center">
          <p class="text-sm text-stone leading-relaxed">
            Need a flexible option? A fully digitized, plug-and-play version is available with video-based delivery and student-facing digital workbooks — perfect for schools that need a low-facilitation path to get started.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== SEE IT IN ACTION ===== -->
  <section class="relative py-24 md:py-32 bg-warm-white">
    <div class="max-w-[1400px] mx-auto px-5 md:px-8">
      <div class="text-center mb-16 md:mb-20">
        <p class="reveal text-[11px] uppercase tracking-[0.3em] text-ember mb-6">See It in Action</p>
        <h2 class="reveal reveal-d1 font-display text-3xl md:text-4xl lg:text-5xl text-charcoal leading-[1.1]">
          Watch the <em>short clips.</em>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {[
          { title: "Who We Are", desc: "A short intro to Wildfire Leadership and our mission.", url: "https://drive.google.com/file/d/10z8d5yvQ8Ky04N68mf6nfGdsgYCpWPCb/view" },
          { title: "What's a Mission Portrait?", desc: "See how students discover and articulate their purpose.", url: "https://vimeo.com/1151621096?fl=pl&fe=sh" },
          { title: "The 7 Igniters Framework", desc: "The curriculum that guides students from self-discovery to action.", url: "https://vimeo.com/1151621096?fl=pl&fe=sh" },
        ].map((video, i) => (
          <a href={video.url} target="_blank" rel="noopener noreferrer" class:list={["reveal group bg-white rounded-xl border border-sand/50 p-8 hover:border-ember/30 transition-colors duration-300", `reveal-d${i + 1}`]}>
            <div class="flex items-center gap-4 mb-3">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-ember/10 flex items-center justify-center group-hover:bg-ember/20 transition-colors duration-300">
                <svg class="w-5 h-5 text-ember ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
              <div>
                <h3 class="text-base font-medium text-charcoal group-hover:text-ember transition-colors duration-300">{video.title}</h3>
                <p class="text-xs text-ember/60 font-medium uppercase tracking-wider">Watch Video</p>
              </div>
            </div>
            <p class="text-sm text-stone leading-relaxed">{video.desc}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ===== CTA ===== -->
  <CallToAction
    title='Bring Ignite to<br/><em class="ember-gradient">your school.</em>'
    image="/images/faith-family-workshop.jpg"
    buttonText="Bring Ignite to Your School"
  />

</BaseLayout>
